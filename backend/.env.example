# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/debre_iyesus_db

# Server Configuration
PORT=3010
NODE_ENV=development
FRONTEND_URL=http://localhost:5190
BACKEND_URL=http://localhost:3010

# JWT Secret (change this to a random string in production)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Cloudinary Configuration (optional - for photo uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Azure Communication Services (optional - for SMS)
AZURE_COMMUNICATION_CONNECTION_STRING=your_connection_string_here
AZURE_SMS_SENDER_ID=DebreIyesus
SMS_COST_PER_MESSAGE=0.16

# Twilio Configuration (alternative to Azure SMS - optional)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_phone_number
